/* Default - screens over 767px wide */
.fit-image {
background: image-url('mds2.png');
background-size: 100%;
width: 1080px;
height: 100%;
  background-repeat: no-repeat;
  background-position: center;
}

/* Mobile Landscape */
@media only screen and (min-width: 480px) and (max-width: 767px) {
  .fit-image {
  width: 100%;
  height: 100%;
  margin: 0px;
  padding: 0px;

  }
}

/* Mobile portrait */
@media only screen and (max-width: 479px) {
  .fit-image {
    width: 100%;
    height: 100%;
  margin: 0px;
  padding: 0px;
  }
}

