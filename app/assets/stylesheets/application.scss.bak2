.navbar-dark .navbar-nav .nav-link {
	color: white;
	display: block;
	text-align: center;
	padding: 14px 16px;
	text-decoration: none;
	border-right: 1px solid black;
}

.navbar-dark .nav-item.active .nav-link, 
.navbar-dark .nav-item:hover .nav-link {
	color: #DA291c;

}

.footer-nav {
	list-style-type: none;
	margin: 0px;
	padding: 0px;
	overflow: hidden;
}

a:link {color:#DA291c; text-decoration: none;}      /* unvisited link */
a:visited {color:#DA291c;  text-decoration: none;}  /* visited link */
a:hover {color:#004b8d;  text-decoration: none;}  /* mouse over link */
a:active {color:#DA291c;  text-decoration: none;}  /* selected link */





